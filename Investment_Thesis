    <script>
        function recalculateMetrics() {
            // Constants
            const baseRevenue = 440000; // FY25E revenue in ₹ Cr
            const basePAT = 28100; // FY25E PAT in ₹ Cr
            const sharesOutstanding = 252000 / 684; // Market cap / share price ≈ 368.42 Cr
            const baseMarketShare = 38; // H1 2025 EV market share
            const basePrice = 684; // Current price

            // Get input values
            const evMarketShare = parseFloat(document.getElementById('ev-market-share').value);
            const revenueGrowth = parseFloat(document.getElementById('revenue-growth').value) / 100;
            const targetPE = parseFloat(document.getElementById('target-pe').value);
            let targetPrice = parseFloat(document.getElementById('target-price').value);

            // Validate inputs
            if (isNaN(evMarketShare) || isNaN(revenueGrowth) || isNaN(targetPE) || isNaN(targetPrice)) {
                alert('Please enter valid numbers for all inputs.');
                return;
            }
            if (evMarketShare < 0 || revenueGrowth < 0 || targetPE < 0 || targetPrice < 0) {
                alert('Input values cannot be negative.');
                return;
            }

            // Calculate updated metrics
            const revenueFY26 = baseRevenue * (1 + revenueGrowth);
            const patFY26 = basePAT * (1 + revenueGrowth * 0.8); // Assume PAT grows at 80% of revenue growth
            const epsFY26 = patFY26 / sharesOutstanding;
            const newPrice = epsFY26 * targetPE;
            const adjustedPrice = Math.round((newPrice * (evMarketShare / baseMarketShare) + targetPrice) / 2); // Blend user target price and market share-adjusted price
            const upsidePotential = ((adjustedPrice - basePrice) / basePrice * 100).toFixed(1);

            // Update valuation table
            const table = document.getElementById('valuation-table').getElementsByTagName('tbody')[0];
            const rows = table.getElementsByTagName('tr');
            rows[1].cells[1].textContent = targetPE.toFixed(1) + 'x'; // Update P/E
            rows[2].cells[1].textContent = (adjustedPrice / (252000 / sharesOutstanding)).toFixed(2) + 'x'; // Update P/B (approximate)
            rows[3].cells[1].textContent = ((252000 + adjustedPrice - basePrice) / (revenueFY26 * 0.105)).toFixed(1) + 'x'; // Update EV/EBITDA

            // Update investment summary
            document.getElementById('target-price-display').textContent = `₹${adjustedPrice}`;
            document.getElementById('upside-potential').textContent = `${upsidePotential}%`;

            // Update executive summary
            const executiveSummary = document.querySelector('.executive-summary');
            const targetP = executiveSummary.querySelector('p:last-child');
            targetP.innerHTML = `<strong>Target Price:</strong> ₹${adjustedPrice} (12-Month Horizon)`;
        }
    </script>
